{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "includes": ["**", "!**/dist"],
    "ignoreUnknown": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noDoubleEquals": "error",
        "noConsole": "error",
        "noDuplicateObjectKeys": "error",
        "noDuplicateCase": "error",
        "useAwait": "error"
      },
      "complexity": {
        "noExtraBooleanCast": "error",
        "noUselessTernary": "error",
        "useArrowFunction": "error"
      },
      "correctness": {
        "noUnreachable": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noMagicNumbers": "error",
        "useConst": "error"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": []
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all",
      "arrowParentheses": "always"
    }
  }
}
